<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/itce_voiceauthentication"
    	android:textSize="20dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonBeginVoiceAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itce_begin" />

        <Button
            android:id="@+id/buttonRetryVoiceAuth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itce_retry" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:text="@string/itce_patientlist"
    	android:textSize="20dp" />

    <ListView
        android:id="@+id/listViewPatientList"
        android:layout_width="match_parent"
        android:layout_height="163dp" >

    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/buttonConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itce_connect" />

        <Button
            android:id="@+id/buttonRetryConnection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/itce_retry" />

    </LinearLayout>

</LinearLayout>